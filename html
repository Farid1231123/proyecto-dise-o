// INTEGRACI√ìN CON EL BACKEND
// ============================================

const API_BASE_URL = window.location.origin + '/api';

// Servicios de API
class ApiService {
    static async request(endpoint, options = {}) {
        try {
            const response = await fetch(`${API_BASE_URL}${endpoint}`, {
                headers: {
                    'Content-Type': 'application/json',
                    ...options.headers
                },
                ...options
            });

            if (!response.ok) {
                throw new Error(`Error ${response.status}: ${response.statusText}`);
            }

            return await response.json();
        } catch (error) {
            console.error('Error en API request:', error);
            throw error;
        }
    }

    // HU-014: Registrar ciudadano
    static async registrarCiudadano(datos) {
        return this.request('/ciudadanos/registrar', {
            method: 'POST',
            body: JSON.stringify(datos)
        });
    }

    // HU-001: Registrar tr√°mite
    static async registrarTramite(datos) {
        return this.request('/tramites/registrar', {
            method: 'POST',
            body: JSON.stringify(datos)
        });
    }

    // HU-002: Consultar estado de tr√°mite
    static async consultarEstadoTramite(numeroExpediente) {
        return this.request(`/tramites/${numeroExpediente}/estado`);
    }

    // HU-006: Procesar pago
    static async procesarPago(datos) {
        return this.request('/pagos/procesar', {
            method: 'POST',
            body: JSON.stringify(datos)
        });
    }

    // HU-008: Consultar deudas
    static async consultarDeudas(ciudadanoId) {
        return this.request(`/ciudadanos/${ciudadanoId}/deudas`);
    }

    // HU-009: Crear plan de pagos
    static async crearPlanPagos(deudaId, numeroCuotas) {
        return this.request(`/deudas/${deudaId}/plan-pagos`, {
            method: 'POST',
            body: JSON.stringify({ numeroCuotas })
        });
    }
}

// ============================================
// INTEGRACI√ìN CON LOS FORMULARIOS EXISTENTES
// ============================================

// HU-001: Formulario de nuevo tr√°mite
document.getElementById('formNuevoTramite')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const datosTramite = {
        dni: formData.get('dni'),
        tipo: formData.get('tipo'),
        descripcion: formData.get('descripcion'),
        email: formData.get('email'),
        telefono: formData.get('telefono')
    };

    try {
        showToast('Enviando solicitud de tr√°mite...', 'info');
        
        const resultado = await ApiService.registrarTramite(datosTramite);
        
        if (resultado.success) {
            showToast(`‚úÖ Tr√°mite registrado. Expediente: ${resultado.data.numeroExpediente}`, 'success');
            
            // Limpiar formulario
            e.target.reset();
            uploadedFiles = [];
            renderFileList();
            
            // Actualizar lista de tr√°mites
            setTimeout(() => {
                document.querySelector('[data-tab="tramites"]').click();
            }, 2000);
        } else {
            showToast(`‚ùå Error: ${resultado.error}`, 'error');
        }
    } catch (error) {
        showToast(`‚ùå Error al registrar tr√°mite: ${error.message}`, 'error');
    }
});

// HU-006: Procesar pago
document.querySelector('#pagos .btn-primary')?.addEventListener('click', async () => {
    const expediente = document.querySelector('#pagos input[placeholder*="EXP"]').value;
    const monto = 245.00; // En una app real, esto vendr√≠a del backend
    
    const datosPago = {
        monto: monto,
        metodo: document.querySelector('#pagos input[name="payment"]:checked').value,
        tramiteId: expediente,
        datosPago: {
            // Datos de la tarjeta (en producci√≥n esto ir√≠a cifrado)
            numeroTarjeta: document.querySelector('#pagos input[placeholder*="1234"]')?.value,
            nombreTarjeta: document.querySelector('#pagos input[placeholder*="JUAN"]')?.value,
            fechaVencimiento: document.querySelector('#pagos input[placeholder*="MM/AA"]')?.value,
            cvv: document.querySelector('#pagos input[placeholder*="123"]')?.value
        }
    };

    try {
        showToast('Procesando pago...', 'info');
        
        const resultado = await ApiService.procesarPago(datosPago);
        
        if (resultado.success) {
            showToast(`‚úÖ Pago procesado. Comprobante: ${resultado.data.comprobante}`, 'success');
            
            // Actualizar interfaz
            setTimeout(() => {
                location.reload();
            }, 2000);
        } else {
            showToast(`‚ùå Error en pago: ${resultado.error}`, 'error');
        }
    } catch (error) {
        showToast(`‚ùå Error al procesar pago: ${error.message}`, 'error');
    }
});

// HU-009: Simulador de plan de pagos
document.getElementById('cuotasSelect')?.addEventListener('change', async (e) => {
    const cuotas = parseInt(e.target.value);
    const montoTotal = 1245.00;
    const montoCuota = (montoTotal / cuotas).toFixed(2);
    
    // Actualizar interfaz
    document.querySelector('#deudas .stat-info h3').textContent = `S/ ${montoCuota}`;
    
    showToast(`Plan recalculado: ${cuotas} cuotas de S/ ${montoCuota}`, 'success');
});

// HU-008: Cargar deudas al abrir la pesta√±a
document.querySelector('[data-tab="deudas"]')?.addEventListener('click', async () => {
    try {
        // Simular ID de ciudadano (en producci√≥n vendr√≠a del login)
        const ciudadanoId = 1;
        const deudas = await ApiService.consultarDeudas(ciudadanoId);
        
        if (deudas.success) {
            console.log('Deudas cargadas:', deudas.data);
            // Aqu√≠ actualizar√≠as la tabla de deudas con los datos reales
        }
    } catch (error) {
        console.error('Error cargando deudas:', error);
    }
});

// HU-002: Actualizaci√≥n autom√°tica de estados
setInterval(async () => {
    try {
        // Actualizar estados de tr√°mites en tiempo real
        const elementosExpediente = document.querySelectorAll('#tramites strong');
        for (const elemento of elementosExpediente) {
            const expediente = elemento.textContent.trim();
            if (expediente.startsWith('EXP-')) {
                const estado = await ApiService.consultarEstadoTramite(expediente);
                if (estado.success) {
                    // Actualizar interfaz con el estado real
                    console.log(`Estado actualizado: ${expediente} - ${estado.data.estado}`);
                }
            }
        }
    } catch (error) {
        console.error('Error actualizando estados:', error);
    }
}, 30000); // Cada 30 segundos

// HU-014: Validaci√≥n RENIEC en tiempo real
document.querySelector('#nuevo input[placeholder*="DNI"]')?.addEventListener('blur', async (e) => {
    const dni = e.target.value.trim();
    
    if (dni.length === 8 && /^\d+$/.test(dni)) {
        try {
            showToast('Validando DNI con RENIEC...', 'info');
            
            // Simular validaci√≥n RENIEC
            setTimeout(() => {
                document.querySelector('#nuevo input[placeholder*="Nombre"]').value = `CIUDADANO ${dni}`;
                showToast('‚úÖ DNI validado correctamente', 'success');
            }, 2000);
        } catch (error) {
            showToast('‚ùå Error validando DNI', 'error');
        }
    }
});
    </script>
</body>
</html>