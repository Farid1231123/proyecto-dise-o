    <script>
        // ============================================
        // NAVEGACI√ìN DE TABS
        // ============================================
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const tabId = btn.dataset.tab;
                
                // Actualizar botones
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                // Actualizar contenido
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.getElementById(tabId).classList.add('active');
            });
        });

        // ============================================
        // HU-003: CARGA DE ARCHIVOS CON DRAG & DROP
        // ============================================
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('fileInput');
        const fileList = document.getElementById('fileList');
        let uploadedFiles = [];

        dropZone.addEventListener('click', () => fileInput.click());

        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.classList.add('dragover');
        });

        dropZone.addEventListener('dragleave', () => {
            dropZone.classList.remove('dragover');
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.classList.remove('dragover');
            handleFiles(e.dataTransfer.files);
        });

        fileInput.addEventListener('change', (e) => {
            handleFiles(e.target.files);
        });

        function handleFiles(files) {
            Array.from(files).forEach(file => {
                // HU-003: Validar tama√±o (10MB) y formato
                if (file.size > 10 * 1024 * 1024) {
                    showToast('Error: El archivo ' + file.name + ' supera el l√≠mite de 10MB', 'error');
                    return;
                }

                const allowedTypes = ['application/pdf', 'image/jpeg', 'image/png'];
                if (!allowedTypes.includes(file.type)) {
                    showToast('Error: Formato no permitido. Solo PDF, JPG, PNG', 'error');
                    return;
                }

                uploadedFiles.push(file);
                displayFile(file);
            });
        }

        function displayFile(file) {
            const fileItem = document.createElement('div');
            fileItem.className = 'file-item';
            fileItem.innerHTML = `
                <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <span style="font-size: 1.5rem;">${getFileIcon(file.type)}</span>
                    <div>
                        <strong>${file.name}</strong>
                        <p style="font-size: 0.8rem; color: var(--gray-600);">${formatFileSize(file.size)}</p>
                    </div>
                </div>
                <button class="btn btn-danger" style="padding: 0.5rem;" onclick="removeFile('${file.name}')">üóëÔ∏è</button>
            `;
            fileList.appendChild(fileItem);
        }

        function getFileIcon(type) {
            if (type === 'application/pdf') return 'üìÑ';
            if (type.startsWith('image/')) return 'üñºÔ∏è';
            return 'üìé';
        }

        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' B';
            if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
            return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
        }

        function removeFile(fileName) {
            uploadedFiles = uploadedFiles.filter(f => f.name !== fileName);
            renderFileList();
        }

        function renderFileList() {
            fileList.innerHTML = '';
            uploadedFiles.forEach(file => displayFile(file));
        }

        // ============================================
        // M√âTODOS DE PAGO
        // ============================================
        document.querySelectorAll('.payment-method').forEach(method => {
            method.addEventListener('click', () => {
                document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('active'));
                method.classList.add('active');
                method.querySelector('input[type="radio"]').checked = true;
            });
        });

        // ============================================
        // SISTEMA DE NOTIFICACIONES (TOAST)
        // ============================================
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;
            
            const icon = {
                success: '‚úÖ',
                error: '‚ùå',
                warning: '‚ö†Ô∏è',
                info: '‚ÑπÔ∏è'
            }[type];
            
            toast.innerHTML = `
                <span style="font-size: 1.5rem;">${icon}</span>
                <div style="flex: 1;">
                    <strong>${type.charAt(0).toUpperCase() + type.slice(1)}</strong>
                    <p style="margin-top: 0.25rem; font-size: 0.9rem;">${message}</p>
                </div>
                <button onclick="this.parentElement.remove()" style="border: none; background: none; cursor: pointer; font-size: 1.2rem;">‚úï</button>
            `;
            
            toastContainer.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideOut 0.3s forwards';
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        // ============================================
        // MODALES
        // ============================================
        function verDetalle(expediente) {
            document.getElementById('modalDetalle').classList.add('active');
            // Aqu√≠ se cargar√≠an los datos reales del expediente
            showToast('Cargando detalles del expediente...', 'info');
        }

        function cerrarModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // Cerrar modal al hacer clic fuera
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.classList.remove('active');
                }
            });
        });

        // ============================================
        // HU-024: CAMBIO DE IDIOMA
        // ============================================
        document.querySelectorAll('.lang-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.lang-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                const lang = btn.dataset.lang;
                showToast(`Idioma cambiado a ${lang === 'es' ? 'Espa√±ol' : 'Quechua'}`, 'success');
                // Aqu√≠ se implementar√≠a la l√≥gica de traducci√≥n
            });
        });

        // ============================================
        // HU-026: ACCESIBILIDAD
        // ============================================
        let fontSize = 100;
        let highContrast = false;

        function toggleHighContrast() {
            highContrast = !highContrast;
            document.body.classList.toggle('high-contrast');
            showToast(highContrast ? 'Alto contraste activado' : 'Alto contraste desactivado', 'info');
        }

        function increaseFontSize() {
            if (fontSize < 200) {
                fontSize += 10;
                document.documentElement.style.fontSize = fontSize + '%';
                showToast('Tama√±o de texto aumentado', 'success');
            }
        }

        function decreaseFontSize() {
            if (fontSize > 100) {
                fontSize -= 10;
                document.documentElement.style.fontSize = fontSize + '%';
                showToast('Tama√±o de texto reducido', 'success');
            }
        }

        // ============================================
        // VALIDACI√ìN DE FORMULARIOS
        // ============================================
        document.getElementById('formNuevoTramite')?.addEventListener('submit', (e) => {
            e.preventDefault();
            
            if (uploadedFiles.length === 0) {
                showToast('Debe adjuntar al menos un documento', 'warning');
                return;
            }

            // HU-001: Simulaci√≥n de validaci√≥n RENIEC
            showToast('Validando identidad con RENIEC...', 'info');
            
            setTimeout(() => {
                showToast('‚úÖ Identidad verificada correctamente', 'success');
                
                setTimeout(() => {
                    // HU-001: Generaci√≥n de n√∫mero de expediente
                    const expediente = 'EXP-2025-' + Math.floor(100000 + Math.random() * 900000);
                    showToast(`Expediente generado: ${expediente}`, 'success');
                    
                    // HU-001: Confirmaci√≥n por email y SMS
                    setTimeout(() => {
                        showToast('üìß Confirmaci√≥n enviada a tu email', 'info');
                        showToast('üì± SMS enviado a tu tel√©fono', 'info');
                    }, 1000);
                }, 2000);
            }, 1500);
        });

        // ============================================
        // HU-009: SIMULADOR DE CUOTAS
        // ============================================
        document.getElementById('cuotasSelect')?.addEventListener('change', (e) => {
            const cuotas = parseInt(e.target.value);
            const monto = 1245;
            const cuotaMensual = (monto / cuotas).toFixed(2);
            
            document.querySelector('.stat-info h3').textContent = `S/ ${cuotaMensual}`;
            showToast(`Plan recalculado para ${cuotas} cuotas`, 'success');
        });

        // ============================================
        // INICIALIZACI√ìN
