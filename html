        function validarRENIEC(dni) {
            return new Promise((resolve) => {
                setTimeout(() => {
                    resolve({
                        success: true,
                        data: {
                            nombre: 'JUAN CARLOS DELGADO MARTINEZ',
                            dni: dni,
                            direccion: 'JR. REAL 456, HUANCAYO'
                        }
                    });
                }, 2000);
            });
        }

